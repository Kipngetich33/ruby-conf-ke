  %body

    -# Add the header section here
    %section.site-nav
      %a(href="/attending") Attending
      %a(href="/location") Location
      %a(href="/speakers") Speakers
      %a(href="/conference") Conference
      %a(href="/sponsors") Sponsors
      %a(href="/code_of_conduct") Code of Conduct
      %a(href="#contact") Contact

    -# add the page body section below using yield
    != yield

    -# add the footer section below
    %section#contact.body-section--event-footer
      %h2 Contact Us
      %h3 Send us an email
      %p.body-section--event-footer__links
        %a(href="mailto:organisers@nairuby.org") organisers@nairuby.org
      %h3 Elsewhere
      %ul.body-section--event-footer__links
        %li
          %a(href="https://twitter.com/NairubyKE") Twitter
          %a(href="https://www.facebook.com/nairubyke") Facebook
          %a(href="https://www.youtube.com/channel/UCCoPB7mJ3jafGSHOEhcOrfw") Youtube
      %h3 CFP (Call For Proposal)
      %p.body-section--event-footer__links
        %a(href="https://www.papercall.io/cfprubyconfke2019") Submit your proposal
      %h3 Mailing List
      %p.body-section--event-footer__links
        %a(href="https://groups.google.com/forum/#!forum/nairuby") Join the mailing list

